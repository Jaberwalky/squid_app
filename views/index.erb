<section>
  <%@accounts.each do |account| %>
    <h3><%=account.formatted_balance%></h3>
    <p><%=account.name%></p>
    <a href="/accounts/<%=account.id%>"><input type="button" value="Add Funds"></a>
  <%end%>
</section>

<section>
  <% @categories.each do |category| %>
    <a href="/categories/<%=category.id%>">
      <h3><%=category.total()%></h3>
      <img src=<%=category.image%>>
      <p><%=category.name%></a>
    </a>
  <% end %>
  <a href="/categories/new"><input type="button" value="Add Category"></a>
</section>

<aside>
  <table>
    <thead>
      <tr>
        <th>Tag</th>
        <th>Transaction</th>
        <th>Amount</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
      <tr>
        <td><img src="<%=transaction.category['image']%>"</td>
        <td><%=transaction.name%></td>
        <td><%=transaction.formatted_amount%></td>
        <td>
          <form action="/transactions/<%=transaction.id%>/delete" method="POST">
          <input type="submit" value="delete" />
          </form>
        </td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
      <td></td>
      <td></td>
      <td>Total</td>
      <td><%= Transaction.total %></td>
    </tfoot>
  </table>
  <a href="/transactions/new"><input type="button" value="Add Transaction"></a>
</aside>
