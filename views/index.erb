<div class="parent-flex-grid">
  <div class="grid-col-sm grid">
    <section>
      <%@accounts.each do |account| %>
        <div class="account-detailed-icon">
          <form action="/accounts/<%=account.id%>/delete" method="POST">
            <input type="submit" value="X" class="delete-button-tr">
          </form>
          <img src="<%=account.image%>"
          <div class="account-text">
            <h3><%=account.name%></h3>
            <h3>£<%=account.formatted_balance%></h3>
            <a href="/balance/<%=account.id%>/edit"><input type="button" value="Add Funds"></a>
        </div>
      <%end%>
      <a href="/accounts/new"><input type="button" value="Add Account" class="bottom-button"></a>
    </section>
  </div>

  <div class="grid-col-md grid">
    <section>
      <% @categories.each do |category| %>
        <div class="detailed-category-icons">
          <a href="/categories/<%=category.id%>">
            <img src=<%=category.image%>>
          </a>
          <div class="category-text">
            <h3><%=category.name%></h3>
            <p>£<%=category.total()%></p>
            <p><%=category.percentage_of_total()%>%</p>
          </div>
        <% end %>
      </div>
      <a href="/categories/new"><input type="button" value="Add Category" class="bottom-button"></a>
    </section>
  </div>

  <div class="grid-col-lg grid" style="overflow-y:auto;">
    <aside>
      <table>
        <thead>
          <tr>
            <th>Tag</th>
            <th>Transaction</th>
            <th>Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.each do |transaction| %>
          <tr>
            <td><img src="<%=transaction.category['image']%>"</td>
            <td><%=transaction.name%></td>
            <td><%=transaction.formatted_amount%></td>
            <td>
              <form action="/transactions/<%=transaction.id%>/delete" method="POST">
              <input type="submit" value="delete" />
              </form>
            </td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <td colspan="4"><%= Transaction.total %></td>
        </tfoot>
      </table>
      <a href="/transactions/new"><input type="button" value="Add Transaction" class="bottom-button"></a>
      <input type="submit" class="add" alt="add">
    </aside>
  </div>
</div>
