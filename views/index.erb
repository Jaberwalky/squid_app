

<table>
  <thead>
    <tr>
      <th>Tag</th>
      <th>Transaction</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
    <tr>
      <td><%=transaction.category['image']%></td>
      <td><%=transaction.name%></td>
      <td><%=transaction.amount%></td>
    </tr>
    <% end %>
  </tbody>
  <tfoot>
    <td></td>
    <td>Total</td>
    <td><%= Transaction.total %></td>
  </tfoot>
</table>

<a href="/categories/new"><input type="button" value="Add Category"></a>
<a href="/transactions/new"><input type="button" value="Add Transaction"></a>
