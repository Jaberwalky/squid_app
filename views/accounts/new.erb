  <h1>add a new account</h1>
  <div class="form-container">
    <form action="/accounts" method="post">
      <label for="name_field">Name</label>
      <input autofocus type="text" id="name_field" name="name">
      <label for="balance_field">Initial Balance</label>
      <input type="number" step="0.01" id="balance_field" name="balance">
      <label for="card_images">Select a card style</label>
      <div class="radio-icon-container">
        <% @card_images.each do |card| %>
          <div class="radio-icon">
            <img src="<%=card%>">
            <input type="radio" id="card_images" name="image" value="<%=card%>">
          </div>
        <% end %>
      </div>
      <input type='submit' value="Save">
    </form>
  </div>
