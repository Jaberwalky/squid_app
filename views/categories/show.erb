<div class="parent-flex-grid">
  <a href="/squid"><input type="button" value="Back"></a>

  <div class="grid-col-md grid">
    <section>
      <% @categories.each do |category| %>
        <div class="detailed-category-icons">
          <a href="/categories/<%=category.id%>">
            <img class="cat-icon" src=<%=category.image%>>
          </a>
          <div class="category-text">
            <h3><%=category.name%></h3>
            <p>£<%=category.total()%></p>
            <p><%=category.percentage_of_total()%>%</p>
          </div>
        </div>
        <% end %>
      <a href="/categories/new"><button class="bottom-button">+ Category</button></a>
    </section>
  </div>


  <div class="grid-col-lg grid">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Transaction</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><img src="<%=@category.image%>" /></td>
            <td><%=transaction.name%></td>
            <td>£<%=transaction.formatted_amount%></td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3">£<%=@category.total%></td>
        </tr>
      </tfoot>
    </table>
  </div>
</div>
