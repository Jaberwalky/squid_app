<div class="parent-flex-grid">
  <a href="/squid"><input type="button" value="Back"></a>

  <div class="grid-col-md grid">
    <section>
      <% @categories.each do |category| %>
        <a href="/categories/<%=category.id%>">
          <h3><%=category.total()%></h3>
          <img src=<%=category.image%>>
          <p><%=category.name%></a>
        </a>
      <% end %>
      <a href="/categories/new"><input type="button" value="Add Category"></a>
    </section>
  </div>


  <div class="grid-col-lg grid">
    <table>
      <thead>
        <tr>
          <th>Transaction</th>
          <th>Amount</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
          <tr>
            <td><%=transaction.name%></td>
            <td><%=transaction.formatted_amount%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%=@category.total%>
  </div>
</div>
