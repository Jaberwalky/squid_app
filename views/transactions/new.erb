<form action="/transactions" method="post">
  <label for="trx-name">Name</label>
  <input type="text" id="trx-name" name="name">
  <label for="cost">Amount</label>
  <input type="number" step="0.01" id="cost" name="amount">

  <label for="cat">Category</label>
  <select id="cat" name="category_id">
    <% @categories.each do |category| %>
      <option value="<%=category.id%>"><%=category.name%></option>
    <% end %>
  </select>

  <label for="account_field">Account</label>
  <select id="account_field" name="account_id">
    <% @accounts.each do |account| %>
      <option value="<%=account.id%>"><%=account.name%></option>
    <% end %>
  </select>

  <input type='submit' value="Save">
</form>
